inherit "obj/monster";

reset(arg) {
    ::reset(arg);
    if (arg) return;
    set_name("Name");
    set_short("Name");
    set_alias("name");  
// gender 0=male, 1=female, 2=neuter    
    set_gender(random(2));
    set_level(4);
    set_wc(4);
    set_ac(2);
    set_move_at_reset();
    set_long(
      "Monster Description\n"
"Monster description continued if needed\n");
    load_chat(8,({ "Monster says......\n",
        "Monster also says.............\n",
      }));
}
