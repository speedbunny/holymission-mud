   if ( !TP ) return( 1 );

   TP->remove_skill( "earth_grip" );

   tell_object( mark,
      "------------------------------------------------------------------\n"+
      "The spell system has changed and this spell had been removed !!!!!\n"+
      "If you are a ninja, please check the guild-board, otherwise this\n"+
      "spell is lost for you !  No reimbursement \n"+
      "------------------------------------------------------------------\n" );

   return( 1 );

